<%= javascript_include_tag 'index' %>
<%= render "header" %>

  <div class="row">
    <div class="col-md-2">
      <div class="row">
        <h5>Nearby Locations</h5>
      </div>
      <div class="row">
        <%= link_to 'Show All Locations', locations_path%>
      </div>
      <div class="row">
        <div id="nearby-locations-sidenav" class="sidenav">
          <% @locations_full.each do |location| %>
            <div id="location-card" class="card">
              <div class="card-body">
                <h5><%=link_to location.name, location.websiteURL, target: "_blank"%></h5>
                <p class="card-text" style="font-size: 12px;"><h5><%= number_with_precision(hav_distance([location.latitude.to_f, location.longitude.to_f], @current_location), precision: 2) %> mi</h5></p>
              </div>
            </div>
            <br>
            <%= content_tag :div, class: "j-location_info", data: {loc: location} do %><% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
        <div id="mapid" style="height:500px"></div>
    </div>

    <div class="col-md-2">
      <div id="js-com_bird_info" class="card">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div id="RecentBirdSightings">
          <h3 class="text-center">Recent Bird Sightings</h3>
        <div id="RecentBirdList">
          <div id="header" class="text-center">
            Click on a location pin to see recent bird sightings there in the past 30 days.
          </div>
          <div class="scrolling-wrapper">
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
            <div class="card"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script src="app/javascript/channels/index.js"></script>
<%= render "footer" %>