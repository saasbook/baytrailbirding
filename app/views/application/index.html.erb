<div class="header">
  <div class="title">
    <%= image_tag("sfbbo-logo.png", class: "logo") %>
    <div class="name">BAY TRAIL BIRD MAPPING</div>
  </div>
  <div class="nav">
    <div class="nav-btn"><i class="fa-solid fa-magnifying-glass"></i></div>
    <div class="nav-btn" id="navigation">
      <i class="fa-solid fa-ellipsis-vertical"></i>
      <nav>
        <%= link_to "Donate", "/donation" %>
        <%= link_to "Locations", "/locations" %>
        <%= link_to "Tips", "/tips" %>
      </nav>
    </div>
    <div class="nav-btn info"><i class="fa-solid fa-info"></i></div>
  </div>
</div>
<main>
  <div id="leaflet-map"></div>
</main>
<div class="overlay" hidden>
  <div class="expand-icon"></div>
  <div class="content">
    <div class="bird-name">Clarkâ€™s Grebe</div>
    <div class="science-name">Aechmophorus clarkii</div>
